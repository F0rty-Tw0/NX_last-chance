{
  "compileOnSave": false,
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@last-chance/backend/api/core": ["libs/backend/api/core/src/index.ts"],
      "@last-chance/backend/api/shared/logger": ["libs/backend/api/shared/logger/src/index.ts"],
      "@last-chance/frontend/shared/assets": ["libs/frontend/shared/assets/src/index.ts"],
      "@last-chance/frontend/shared/styles": ["libs/frontend/shared/styles/src/index.ts"],
      "@last-chance/frontend/web-app/shared/core": ["libs/frontend/web-app/shared/core/src/index.ts"],
      "@last-chance/frontend/web-app/shared/logger": ["libs/frontend/web-app/shared/logger/src/index.ts"],
      "@last-chance/shared/utils": ["libs/shared/utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
